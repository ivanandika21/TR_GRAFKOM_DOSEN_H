void tanjakan() {
	//tanjakan depan
	glBegin(GL_QUADS); //atas
	glColor3f(0.5, 0.5, 0.5);
	glVertex3f(-15, 8, 0);
	glVertex3f(15, 8, 0);
	glVertex3f(15, 8, 2);
	glVertex3f(-15, 8, 2);
	glEnd();

	glBegin(GL_QUADS); //miring
	glColor3f(0.4, 0.4, 0.4);
	glVertex3f(-15, 0, 17);
	glVertex3f(15, 0, 17);
	glVertex3f(15, 8, 2);
	glVertex3f(-15, 8, 2);
	glEnd();

	glBegin(GL_TRIANGLES); //segitiga
	glColor3f(0.45, 0.45, 0.45);
	glVertex3f(15,0,17);
	glVertex3f(15,0,2);
	glVertex3f(15,8,2);
