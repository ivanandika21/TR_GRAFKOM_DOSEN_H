void gelas_tea() {
	glPushMatrix();//gelas
	glTranslated(-2, 27, -140);
	glRotated(90, -1, 0, 0);
	
	quadratic = gluNewQuadric();
	glColor3d(0.85, 0.85, 0.85);
	gluCylinder(quadratic, 1.0, 1.0, 3.0, 32, 32);
	glColor3d(0.6, 0.6, 0.6);
	gluCylinder(quadratic, 0.95, 0.95, 3.0, 32, 32);
	glPopMatrix();

	glPushMatrix();//pegangan gelas
	glTranslated(-1, 29, -140);
	glColor3d(0.8, 0.8, 0.8);
	glutSolidTorus(0.2, 0.6, 20, 20);
	glPopMatrix();

	glPushMatrix();//tea-pot
	glTranslated(3.5, 29, -135);
	glColor3d(0.85, 0.85, 0.85);
	glutSolidTeapot(2);
	glPopMatrix();
}

void lampu() {
	glPushMatrix();//gagangan lampu
	glTranslated(-15, 62, -140);
	glRotated(90, -1, 0, 0);
	glColor3d(1, 1, 1);
	quadratic = gluNewQuadric();
	gluCylinder(quadratic, 1.5, 1.0, 3.0, 32, 32);
	glPopMatrix();

	glPushMatrix();//lampu bohlam
	glTranslated(-15, 59.5, -140);
	glRotated(90, -1, 0, 0);
	glColor3d(0.941, 0.705, 0);
	glutSolidSphere(3, 10, 10);
	glLineWidth(2);
	glColor3d(0.941, 0.866, 0);
	glutWireSphere(3.1, 30, 10);
	glPopMatrix();
}

void draw() {
	matahari();
	ground();

	glPushMatrix();
		tembok_luar();
		tembok_dalam();
		lantai();
		pagar_kirikanan();
		pilar();

		putih_kotak(16, 20.5, 0.01);
		putih_kotak(16, 20.5, -6.01);
		putih_kotak(-64, -68.5, 0.01);
		putih_kotak(-64, -68.5, -6.01);

		abu_kotak(16.5, 20, 0.02);
		abu_kotak(16.5, 20, -6.02);
		abu_kotak(-64.5, -68, 0.02);
		abu_kotak(-64.5, -68, -6.02);

		hitam_kotak(17.5, 19, 0.03);
		hitam_kotak(17.5, 19, -6.03);
		hitam_kotak(-65.5, -67, 0.03);
		hitam_kotak(-65.5, -67, -6.03);

		atas_pager_kanan();
		atas_pager_kiri();
		atas_pilar();

		tanjakan();
		pintu();
		
		atap();
		tembok_atap();
		kasur();
		pohonnatal();
		lemari();
		pln();
		lampu();
	glPopMatrix();

	glPushMatrix();
		glTranslatef(-33.5, -12, 42.5);
		gelas_tea();
	glPopMatrix();

	glPushMatrix();
		glTranslatef(0, 0, 70);
		tv();
		for (float i = 0; i < 4; i++)
		{
			soundbar(i * 0.5);
		}
		rakdinding();
	glPopMatrix();

	glPushMatrix();
		glRotatef(90, 0, 1, 0);
		glTranslatef(20, 0, 78);
		rak();
	glPopMatrix();

	glPushMatrix();
		glTranslatef(0, 0, 96);
		angin_ac();
	glPopMatrix();
	
	glPushMatrix();
		glTranslatef(-63, 0, 0);
		mesincuci();
	glPopMatrix();

	glPushMatrix();
		glTranslatef(-15, 8, -210);
		ember();
	glPopMatrix();

	glPushMatrix();
		glRotatef(90, 0, 1, 0);
		glTranslatef(204, 8, 25);
		meja();
	glPopMatrix();

	glPushMatrix();
		glRotatef(90, 0, 1, 0);
		glTranslatef(204, 8, 25);
		sofa();
	glPopMatrix();

	glPushMatrix();
		glRotatef(180, 0, 1, 0);
		glTranslatef(-22, 0, 150);
		pintu();
	glPopMatrix();

	glPushMatrix();
		glTranslatef(0, 0, -100);
		pintu();
	glPopMatrix();

	glPushMatrix();
		glTranslatef(-25.5, 0, 0);
		atas_pilar();
	glPopMatrix();

	glPushMatrix();
		glTranslatef(140, 0, 0);
		tembok_atap();
	glPopMatrix();
	jendela();

	cout << "X_GESER = " << x_geser << "    Y_GESER = " << y_geser << "    Z_GESER = " << z_geser << endl;
	glFlush();
}

void display()
{
	glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT);
	glLoadIdentity();
	camera();
	draw();

	glutSwapBuffers();
}

void reshape(int w, int h)
{
	glViewport(0, 0, w, h);
	glMatrixMode(GL_PROJECTION);
	glLoadIdentity();

	gluPerspective(50, 16.0 / 9.0, 2, 10000);
	glMatrixMode(GL_MODELVIEW);

}

void timer(int)
{
	glutPostRedisplay();
	glutWarpPointer(width / 2, height / 2);
	glutTimerFunc(1000 / FPS, timer, 0);
}

void passive_motion(int x, int y)
{
	int dev_x, dev_y;
	dev_x = (width / 2) - x;
	dev_y = (height / 2) - y;

	yaw += (float)dev_x / 20.0;
	pitch += (float)dev_y / 20.0;
}

void camera()
{

	if (motion.Forward)
	{
		camX += cos((yaw + 90) * TO_RADIANS) * 2;
		camZ -= sin((yaw + 90) * TO_RADIANS) * 2;
	}
	if (motion.Backward)
	{
		camX += cos((yaw + 90 + 180) * TO_RADIANS) * 2;
		camZ -= sin((yaw + 90 + 180) * TO_RADIANS) * 2;
	}
	if (motion.Left)
	{
		camX += cos((yaw + 90 + 90) * TO_RADIANS) * 2;
		camZ -= sin((yaw + 90 + 90) * TO_RADIANS) * 2;
	}
	if (motion.Right)
	{
		camX += cos((yaw + 90 - 90) * TO_RADIANS) * 2;
		camZ -= sin((yaw + 90 - 90) * TO_RADIANS) * 2;
	}
	if (motion.Naik)
	{
		terbang -= 2.0;
	}
	if (motion.Turun)
	{
		terbang += 2.0;
	}

	if (pitch >= 70)
		pitch = 70;
	if (pitch <= -90)
		pitch = -90;


	glRotatef(-pitch, 1.0, 0.0, 0.0);
	glRotatef(-yaw, 0.0, 1.0, 0.0);

	glTranslatef(-camX, -terbang, -100 - camZ);
	if (terbang < 40)
		terbang = 39;
}

void keyboard(unsigned char key, int x, int y)
{
	switch (key)
	{
	case 'W':
	case 'w':
		motion.Forward = true;
		break;
	case 'A':
	case 'a':
		motion.Left = true;
		break;
	case 'S':
	case 's':
		motion.Backward = true;
		break;
	case 'D':
	case 'd':
		motion.Right = true;
		break;
	case 'E':
	case 'e':
		motion.Naik = true;
		break;
	case 'Q':
	case 'q':
		motion.Turun = true;
		break;
	case '6':
		x_geser += 0.5;
		break;
	case '4':
		x_geser -= 0.5;
		break;
	case '8':
		y_geser += 0.5;
		break;
	case '2':
		y_geser -= 0.5;
		break;
	case '9':
		z_geser -= 0.5;
		break;
	case '1':
		z_geser += 0.5;
		break;
	case '`':
		exit(1);
	}
}

void keyboard_up(unsigned char key, int x, int y)
{
	switch (key)
	{
	case 'W':
	case 'w':
		motion.Forward = false;
		break;
	case 'A':
	case 'a':
		motion.Left = false;
		break;
	case 'S':
	case 's':
		motion.Backward = false;
		break;
	case 'D':
	case 'd':
		motion.Right = false;
		break;
	case 'E':
	case 'e':
		motion.Naik = false;
		break;
	case 'Q':
	case 'q':
		motion.Turun = false;
		break;
	}
}

int main(int argc, char** argv)
{
	glutInit(&argc, argv);
	glutInitDisplayMode(GLUT_DOUBLE | GLUT_RGB | GLUT_DEPTH);
	glutInitWindowSize(width, height);
	glutCreateWindow("TR DOSEN | RUMAH");

	init();
	glutDisplayFunc(display);
	glutReshapeFunc(reshape);
	glutPassiveMotionFunc(passive_motion);
	glutTimerFunc(0, timer, 0);
	glutKeyboardFunc(keyboard);
	glutKeyboardUpFunc(keyboard_up);

	glutMainLoop();
	return 0;
}
