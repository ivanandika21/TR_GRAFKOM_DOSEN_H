void pohonnatal() {
	glPushMatrix();
	glTranslated(-63, 15, -122); //daun pohon natal
	glRotated(90, -1, 0, 0);
	glColor3d(0.164, 0.643, 0.098);
	glutSolidCone(4, 10, 50, 5);
	glLineWidth(2);
	glColor3d(0.113, 0.474, 0.066);
	glutWireCone(4.05, 10.05, 50, 5);
	glColor4f(0.9, 0.9, 0.9, 0.5);
	glutWireCone(4.05, 10.05, 25, 3);
	glPopMatrix();

	glPushMatrix();
	glTranslated(-63, 10, -122);//pot
	glColor3d(0.380, 0.364, 0.360);
	glutSolidCube(5);
	glPopMatrix();

	glPushMatrix();//kayu pohon
	glTranslated(-63, 14, -122);
	glColor3d(0.784, 0.278, 0.054);
	glutSolidCube(2);
	glPopMatrix();

	glPushMatrix();//kayu pohon
	glTranslated(-63, 12, -122);
	glColor3d(0.784, 0.278, 0.054);
	glutSolidCube(2);
	glPopMatrix();
}

