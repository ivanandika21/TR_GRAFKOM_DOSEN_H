}

void atap() {
	glBegin(GL_QUADS);//plafon seluruh
	glColor3f(0.9, 0.9, 0.9);
	glVertex3f(-70, 65, 0.1);
	glVertex3f(70, 65, 0.1);
	glColor3f(0.85, 0.85, 0.85);
	glVertex3f(70, 65, -220.1);
	glVertex3f(-70, 65, -220.1);
	glEnd();

	glBegin(GL_QUADS);//atas depan
	glColor3f(0.4, 0.4, 0.4);
	glVertex3f(-70, 75, -35);
	glVertex3f(70, 75, -35);
	glVertex3f(70, 120, -128);
	glVertex3f(-70, 120, -128);
	glEnd();

	glBegin(GL_QUADS);//atas belakang
	glColor3f(0.4, 0.4, 0.4);
	glVertex3f(-70, 120, -128);
	glVertex3f(70, 120, -128);
	glVertex3f(70, 65, -220);
	glVertex3f(-70, 65, -220);
	glEnd();

	glBegin(GL_QUADS);//asbes
	glColor3f(0.870, 0.870, 0.870);
	glVertex3f(-70, 65, 0.1);
	glVertex3f(70, 65, 0.1);
	glColor3f(0.7, 0.7, 0.7);
	glVertex3f(70, 75, -35);
	glVertex3f(-70, 75, -35);
	glEnd();

	float x_asbes = -70;
	for (i = 0; i < 140; i++) {
		glBegin(GL_QUADS);//asbes
		glColor3f(0.5, 0.5, 0.5);
		glVertex3f(x_asbes, 63.51, 5.5);
		glColor3f(0.7, 0.7, 0.7);
		glVertex3f(x_asbes + 1, 63.51, 5.5);
		glVertex3f(x_asbes + 1, 75.01, -35);
		glColor3f(0.5, 0.5, 0.5);
		glVertex3f(x_asbes, 75.01, -35);
		glEnd();
		x_asbes += 1;
	}
	
	float x_genteng = -70; //vertikal
	for (i = 0; i < 28; i++) {
		glBegin(GL_QUADS);//atas depan
		glColor4f(0.4, 0.4, 0.4, 1);
		glVertex3f(x_genteng, 75.01, -35);
		glColor4f(0.5, 0.5, 0.5, 0.8);
		glVertex3f(x_genteng + 5, 75.01, -35);
		glVertex3f(x_genteng + 5, 120.01, -128);
		glColor4f(0.4, 0.4, 0.4, 1);
		glVertex3f(x_genteng, 120.01, -128);
		glEnd();
		x_genteng += 5;
	}

	float y_genteng = 120.01, z_genteng = -128; //horizontal
	for (i = 0; i < 10; i++) {
		glBegin(GL_QUADS);//atas depan
		glColor4f(0.5, 0.5, 0.5, 0.5);
		glVertex3f(70, y_genteng, z_genteng);
		glVertex3f(-70, y_genteng, z_genteng);

		glColor4f(0.4, 0.4, 0.4, 0.8);
		glVertex3f(-70, y_genteng - 4.5, z_genteng + 9.5);
		glVertex3f(70, y_genteng - 4.5, z_genteng + 9.5);
		glEnd();
		y_genteng -= 4.57;
		z_genteng += 9.5;
	}

	float x_genteng_b = -70; //vertikal
	for (i = 0; i < 28; i++) {
		glBegin(GL_QUADS);//atas depan
		glColor4f(0.4, 0.4, 0.4, 1);
		glVertex3f(x_genteng_b, 65.01, -220);
		glColor4f(0.5, 0.5, 0.5, 0.8);
		glVertex3f(x_genteng_b + 5, 65.01, -220);
		glVertex3f(x_genteng_b + 5, 120.01, -128);
		glColor4f(0.4, 0.4, 0.4, 1);
		glVertex3f(x_genteng_b, 120.01, -128);
		glEnd();
		x_genteng_b += 5;
	}

	float y_genteng_b = 120.01, z_genteng_b = -128;; //horizontal
	for (i = 0; i < 10; i++) {
		glBegin(GL_QUADS);//atas belakang
		glColor4f(0.5, 0.5, 0.5, 0.5);
		glVertex3f(-70, y_genteng_b, z_genteng_b);
		glVertex3f(70, y_genteng_b, z_genteng_b);

		glColor4f(0.4, 0.4, 0.4, 0.8);
		glVertex3f(70, y_genteng_b - 5.5, z_genteng_b - 9.5);
		glVertex3f(-70, y_genteng_b - 5.5, z_genteng_b - 9.5);
		glEnd();
		y_genteng_b -= 5.65;
		z_genteng_b -= 9.5;
	}
}

