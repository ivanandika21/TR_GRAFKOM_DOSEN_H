void angin_ac() {
	//ac belakang
	glBegin(GL_QUADS);
	glColor3f(1.0f, 1.0f, 1.0f);
	glVertex3f(-69.9, 60, -200); //kaa
	glVertex3f(-69.9, 60, -170); //kia
	glVertex3f(-69.9, 50, -170); //kib
	glVertex3f(-69.9, 50, -200); //kab
	glEnd();

	//ac depan
	glBegin(GL_QUADS);
	glColor3f(0.94f, 0.94f, 0.94f);
	glVertex3f(-60, 58, -200); //kaa
	glVertex3f(-60, 58, -170); //kia
	glVertex3f(-60, 52, -170); //kib
	glVertex3f(-60, 52, -200); //kab
	glEnd();

	//ac kiri
	glBegin(GL_POLYGON);
	glColor3f(0.90f, 0.90f, 0.90f);
	glVertex3f(-69.9, 60, -170); //kia
	glVertex3f(-69.9, 50, -170); //kib
	glVertex3f(-62, 50, -170); //kib#
	glVertex3f(-60, 52, -170); //kib
	glVertex3f(-60, 58, -170); //kia
	glVertex3f(-62, 60, -170); //kia#
	glEnd();

	//ac kanan
	glBegin(GL_POLYGON);
	glColor3f(0.95f, 0.95f, 0.95f);
	glVertex3f(-60, 58, -200); //kaa
	glVertex3f(-60, 52, -200); //kab
	glVertex3f(-62, 50, -200); //kab
	glVertex3f(-69.9, 50, -200); //kab
	glVertex3f(-69.9, 60, -200); //kaa
	glVertex3f(-62, 60, -200); //kaa
	glEnd();

	//ac miring bawah
	glBegin(GL_POLYGON);
	glColor3f(0.85f, 0.85f, 0.85f);
	glVertex3f(-62, 50, -170); //kib#
	glVertex3f(-60, 52, -170); //kib
	glVertex3f(-60, 52, -200); //kab
	glVertex3f(-62, 50, -200); //kab
	glEnd();

	//ac miring atas
	glBegin(GL_POLYGON);
	glColor3f(0.97f, 0.97f, 0.97f);
	glVertex3f(-60, 58, -170); //kia
	glVertex3f(-62, 60, -170); //kia#
	glVertex3f(-62, 60, -200); //kaa
	glVertex3f(-60, 58, -200); //kaa
	glEnd();

	//ac atas
	glBegin(GL_POLYGON);
	glColor3f(1.0f, 1.0f, 1.0f);
	glVertex3f(-69.9, 60, -200); //kaa
	glVertex3f(-69.9, 60, -170); //kia
	glVertex3f(-62, 60, -170); //kia#
	glVertex3f(-62, 60, -200); //kaa
	glEnd();

	//ac bawah
	glBegin(GL_POLYGON);
	glColor3f(0.80f, 0.80f, 0.80f);
	glVertex3f(-69.9, 50, -200); //kaa
	glVertex3f(-69.9, 50, -170); //kia
	glVertex3f(-62, 50, -170); //kib#
	glVertex3f(-62, 50, -200); //kab
	glEnd();
}

